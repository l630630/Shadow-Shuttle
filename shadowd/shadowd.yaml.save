# 修改 users 下的密码
# Shadowd Configuration File - Development Mode

headscale:
  # URL of the Headscale server (not used in dev mode)
  url: https://headscale.example.com
  
  # Pre-authentication key (not used in dev mode)
  preauth_key: dev-mode

ssh:
  # SSH server port (using non-privileged port for development)
  port: 2222
  
  # Path to SSH host key file
  host_key_path: ./ssh_host_key
  
  # Path to authorized_keys file for public key authentication
  authorized_keys_path: ./authorized_keys
  
  # Enable password authentication for development
  # In production, use public key authentication only
  password_auth_enabled: true
  
  # User accounts for password authentication
  # Format: username: password
  # IMPORTANT: Change these passwords!
  users:
    a0000: "liu630"  # Change this to your desired password
    admin: "liu630"       # Change this to your desired password
  
  # Allowed networks - allow all for development
  allowed_networks:
    - 0.0.0.0/0

grpc:
  # gRPC server port (using different port to avoid conflicts)
  port: 50052
  
  # Enable TLS for gRPC (default: false)
  tls_enabled: false

device:
  # Device name (will be displayed in mobile app)
  name: MacBook Air
