# Headscale Environment Variables Example
# Copy this file to .env and fill in your values

# Server Configuration
HEADSCALE_SERVER_URL=https://headscale.yourdomain.com
HEADSCALE_LISTEN_ADDR=0.0.0.0:8080
HEADSCALE_METRICS_ADDR=0.0.0.0:9090
HEADSCALE_GRPC_ADDR=0.0.0.0:50443

# Database Configuration (if using PostgreSQL)
# DB_TYPE=postgres
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=headscale
# DB_USER=headscale
# DB_PASS=your-secure-password

# OIDC Configuration (optional)
# OIDC_ISSUER=https://accounts.google.com
# OIDC_CLIENT_ID=your-client-id.apps.googleusercontent.com
# OIDC_CLIENT_SECRET=your-client-secret

# Logging
LOG_LEVEL=info
LOG_FORMAT=text

# Network Configuration
IP_PREFIX=100.64.0.0/10

# Security
# TLS_CERT_PATH=/etc/headscale/tls/cert.pem
# TLS_KEY_PATH=/etc/headscale/tls/key.pem
